<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.ryanmiles.dailyenergytracker">

    <application
        android:name=".DailyEnergyApplication"
        android:allowBackup="false"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".entrylist.EntryListActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addeditentry.AddEditEntryActivity"
            android:label="@string/title_activity_add_edit_entry"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".singleentrygraph.SingleEntryGraphActivity"
            android:label="@string/entry_graph"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>